head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title= pageTitle
  link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet")
  link(href="https://fonts.googleapis.com/css2?family=Geologica:wght@400;700&display=swap" rel="stylesheet")
    
  style.
    body {
      font-family: 'Geologica';
      line-height: 1.6;
      color: #333;
      margin: 0;
      padding-left: 30px; 
      padding-right: 30px;
      background-color: #FFFFFF;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      background-color: #EEEBF1;
    }
    .header {
      background-color: #DEDAE1;
      padding: 15px 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo-container {
      display: flex;
      align-items: center;
    }
    .logo {
      margin-top:15px;
      height: 70px;
      width: auto;
    }
    .social-icons {
      display: flex;
      align-items: center;
      margin-left: auto;
      padding-top: 70px;
    }
    .social-icon {
      margin-left: 20px;
    }
    .social-icon img {
      width: 24px;
      height: 24px;
      filter: brightness(0) invert(1);
    }
    .content {
      padding: 20px;
      padding-left: 35px; 
      padding-right: 35px;
      font-size: 11px;
    }
    h2 {
      color: #000;
      margin-top: 0;
    }
    p {
      color: #000;
    }
    ul, ol, li {
      padding-left: 20px;
      margin: 10px 0;
      color: #000;
    }
    .button {
      display: inline-block;
      background-color: #1b1330;
      color: #ffffff;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 20px;
      margin-top: 20px;
    }
    .footer {
      font-size: 11px;
    }
    
    .otp-digit {
      display: inline-block;
      width: 40px;
      height: 40px;
      line-height: 40px;
      text-align: center;
      background-color: #EEEBF1;
      color: #1b1330;
      color: white;
      font-size: 18px;
      font-weight: bold;
      border-radius: 4px;
      margin: 0 5px;
    }
    
    .title {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .icon-info {
      display: flex;
      align-items: flex-start;
      margin-bottom: 15px;
    }

    .icon-info div {
      margin-left: 10px;
    }

    .small-title {
      font-weight: bold;
      color: #000;
    }

    .transaction-info {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
    }

    .transaction-info strong {
      margin-right: 8px;
      color: #000;
    }

    .container-button {
      text-align: center;
      margin: 25px 0;
    }
    .support-block {
        max-width: 600px;
        margin: 0 auto;
        background-color: #EEEBF1;
        padding: 20px 35px;
        font-size: 11px;
      }
    .separator {
        max-width: 600px;
        margin: 0 auto;
        padding: 0;
    } 
    