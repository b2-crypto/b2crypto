        "start-microservices:debug",
        "--",
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "auto",
      "port": 9229,
      "autoAttachChildProcesses": true,
      "envFile": "${workspaceRoot}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Activity gateway",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        //"start:debug",
        "start-gateway-activity:debug",
        "--",
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "auto",
      "port": 9229,
      "autoAttachChildProcesses": true,
      "envFile": "${workspaceRoot}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Activity microservice",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start-microservice-activity:debug",
        "--",
        "--inspect-brk"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "auto",
      "port": 9230,
      "autoAttachChildProcesses": true,
      "envFile": "${workspaceRoot}/.env"
    }
