{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@([^/]*)/([^/]*)/(.*)": "<rootDir>../../../libs/$1/src/$2",
    "@(.*)/(.*)": "<rootDir>../../../libs/$1/src"
  }
}
